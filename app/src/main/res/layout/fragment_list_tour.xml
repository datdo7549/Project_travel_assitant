<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/gradienr_background2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:id="@+id/rl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      <TextView
          android:layout_marginTop="10dp"
          android:layout_alignParentLeft="true"
          android:textSize="25sp"
          android:textColor="#fff"
          android:text="All Tour"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      <Button
          android:id="@+id/getListTour"
          android:layout_marginTop="5dp"
          android:background="@drawable/button_cus"
          android:layout_alignParentRight="true"
          android:text="Tìm theo trang, tên,..."
          android:layout_width="200dp"
          android:layout_height="wrap_content"/>
    </RelativeLayout>

    <SearchView
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/rl1"
        android:background="@drawable/button_cus2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


  <ListView
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:layout_marginTop="170dp"
      android:descendantFocusability="blocksDescendants"
      android:layout_alignParentBottom="true"
      android:focusableInTouchMode="true"
      android:id="@+id/listTour"
      android:layout_width="match_parent"
      android:divider="@null"
      android:dividerHeight="10dp"
      android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/create_button"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/add_image"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
</RelativeLayout>