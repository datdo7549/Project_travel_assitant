<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/item_cus_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:text="Lấy danh sách tour theo:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/getMyTour_Normal"
                android:text="Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/getMyTour_Status"
                android:text="By status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/getMyStopPoint"
                android:text="Get My Stop point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>




        <LinearLayout
            android:visibility="gone"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@+id/ln_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#fff"
                    android:text="Nhập số trang:"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/pageIndex"
                    android:inputType="number"
                    android:layout_marginLeft="20dp"
                    android:hint="vd:123"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#fff"
                    android:text="Nhập số phàn tử của trang:"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/pageSize"
                    android:inputType="number"
                    android:layout_marginLeft="20dp"
                    android:hint="vd:123"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:visibility="gone"
            android:layout_gravity="center"
            android:id="@+id/get_my_tour_in_popup"
            android:text="Get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>





    </LinearLayout>
</RelativeLayout>