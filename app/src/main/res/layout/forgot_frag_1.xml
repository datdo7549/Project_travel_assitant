<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_background3">

    <LinearLayout
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/mailbox"
            android:layout_width="200dp"
            android:layout_height="200dp"/>
        <TextView
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="26sp"
            android:text="Forgot your password?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="Enter yout registered email or phone below to receive"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_gravity="center"
            android:text="password reset instruction"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:textAlignment="center"
            android:id="@+id/request_data"
            android:background="#fff"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <Button
            android:background="@android:color/holo_blue_bright"
            android:layout_marginTop="20dp"
            android:id="@+id/send_request_OTP"
            android:text="send"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>

</RelativeLayout>