<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange">
    <ImageView
        android:id="@+id/back_homepage3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/back_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/back_homepage3"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:text="Forgot password"
            android:textColor="#ffffff"
            android:textSize="23sp"
            android:fontFamily="@font/corbelbold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Enter your register email or phone number to"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:fontFamily="@font/corbelbold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:text="receive password reset instruction"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:fontFamily="@font/corbelbold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <EditText
        android:id="@+id/request_data"
        android:layout_above="@+id/send_request_OTP"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:hint="Email or phone number"
        android:layout_marginTop="20dp"
        android:background="@drawable/username_edit_custom"
        android:layout_width="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="30dp"/>
    <TextView
        android:layout_marginBottom="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/send_request_OTP"
        android:text="Send"
        android:fontFamily="@font/corbelbold"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>