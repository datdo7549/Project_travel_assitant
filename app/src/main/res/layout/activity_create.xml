<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="30dp"
    android:paddingRight="20dp"
    tools:context=".CreateActivity">

    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_homepage5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_icon" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/corbelbold"
            android:text="Create tour"
            android:textColor="#ffffff"
            android:textSize="25sp" />
    </LinearLayout>

    <ScrollView
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="440dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/corbelbold"
                android:text="Name tour"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/tour_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/username_edit_custom"
                android:textColor="#ffffff"
                android:textSize="17sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:layout_alignParentLeft="true"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/corbelbold"
                        android:text="Adult"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/adult"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/username_edit_custom"
                        android:textColor="#ffffff"
                        android:inputType="number"
                        android:textSize="17sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/corbelbold"
                        android:text="Children"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/children"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/username_edit_custom"
                        android:textColor="#ffffff"
                        android:inputType="number"
                        android:textSize="17sp" />
                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#ffffff"
                    android:fontFamily="@font/corbelbold"
                    android:textSize="15sp"
                    android:text="Cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <EditText
                        android:id="@+id/minCost"
                        android:layout_alignParentLeft="true"
                        android:textColor="#ffffff"
                        android:textSize="17sp"
                        android:background="@drawable/username_edit_custom"
                        android:layout_width="100dp"
                        android:inputType="number"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_centerInParent="true"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/corbelbold"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:gravity="bottom"
                        android:text="to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/maxCost"
                        android:layout_alignParentRight="true"
                        android:textColor="#ffffff"
                        android:textSize="17sp"
                        android:background="@drawable/username_edit_custom"
                        android:layout_width="100dp"
                        android:inputType="number"
                        android:layout_height="match_parent"/>
                </RelativeLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#ffffff"
                    android:fontFamily="@font/corbelbold"
                    android:textSize="15sp"
                    android:text="Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <EditText
                        android:id="@+id/startDate"
                        android:layout_alignParentLeft="true"
                        android:textColor="#ffffff"
                        android:textSize="17sp"
                        android:background="@drawable/username_edit_custom"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_centerInParent="true"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/corbelbold"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:gravity="bottom"
                        android:text="to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/endDate"
                        android:layout_alignParentRight="true"
                        android:textColor="#ffffff"
                        android:textSize="17sp"
                        android:background="@drawable/username_edit_custom"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:textColor="@color/green"
                android:fontFamily="@font/corbelbold"
                android:textSize="15sp"
                android:text="Pirvate or Public?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioGroup
                android:id="@+id/is_private_radio"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Private"
                    android:textSize="17sp"
                    android:id="@+id/radioButton_yes" />
                <RadioButton
                    android:textColor="#fff"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Public"
                    android:textSize="17sp"
                    android:id="@+id/radioButton_no" />
            </RadioGroup>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/linear_status"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:textColor="@color/green"
                    android:fontFamily="@font/corbelbold"
                    android:textSize="15sp"
                    android:text="Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RadioGroup
                    android:id="@+id/status_radio"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/radioButton_canceled"
                        android:textColor="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Canceled" />
                    <RadioButton
                        android:id="@+id/radioButton_open"
                        android:textColor="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open" />
                    <RadioButton
                        android:id="@+id/radioButton_started"
                        android:textColor="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Started" />
                    <RadioButton
                        android:id="@+id/radioButton_closed"
                        android:textColor="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Closed" />
                </RadioGroup>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/create_text_view"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="#ffffff"
        android:fontFamily="@font/corbelbold"
        android:text="Create"
        android:textSize="23sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




</RelativeLayout>