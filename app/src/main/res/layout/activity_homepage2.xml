<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    tools:context=".Homepage">
    <RelativeLayout
        android:id="@+id/ln_image"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/window1" />
        <ImageView
            android:layout_marginRight="-80dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/winow2"
            android:layout_width="250dp"
            android:layout_height="250dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ln_image"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="32sp"
            android:textColor="#ffffff"
            android:fontFamily="@font/corbelbold"
            android:text="Welcome to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="32sp"
            android:textColor="#ffffff"
            android:fontFamily="@font/corbelbold"
            android:text="Travaloo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:fontFamily="@font/corbelreg"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:text="Start your vacation early. Get to the airport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:fontFamily="@font/corbelreg"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:text="with time to spare and relax with some"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:fontFamily="@font/corbelreg"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:text="cocktails before your flight."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:text="Sign up"
                android:textColor="#ffffff"
                android:id="@+id/button_sign_up_screen"
                android:textAllCaps="false"
                android:fontFamily="@font/corbelbold"
                android:background="@color/orange"
                android:layout_width="match_parent"
                android:layout_height="60dp">
            </Button>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/button_login_screen"
                android:textColor="#ffffff"
                android:text="Login now"
                android:textAllCaps="false"
                android:fontFamily="@font/corbelbold"
                android:background="@drawable/button_login_custom"
                android:layout_width="match_parent"
                android:layout_height="60dp">
            </Button>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>