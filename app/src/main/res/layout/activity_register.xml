<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/orange"
    tools:context=".RegisterActivity">
    <ImageView
        android:id="@+id/back_homepage2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/back_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
    <LinearLayout
        android:layout_below="@+id/back_homepage2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/map_logo"
            android:layout_width="280dp"
            android:layout_height="250dp"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left"
            android:text="Join us!"
            android:textColor="@color/green2"
            android:textSize="25sp"
            android:fontFamily="@font/corbelbold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <ScrollView
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/linear_bot2"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="170dp">
        <LinearLayout
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Email"
                android:fontFamily="@font/corbelbold"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/email"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:hint="Email or phone number"
                android:layout_marginTop="20dp"
                android:background="@drawable/username_edit_custom"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <TextView
                android:layout_marginTop="20dp"
                android:text="Full name"
                android:fontFamily="@font/corbelbold"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/fullName"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:layout_marginTop="20dp"
                android:background="@drawable/username_edit_custom"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <TextView
                android:layout_marginTop="20dp"
                android:text="Password"
                android:fontFamily="@font/corbelbold"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/password"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:inputType="textPassword"
                android:layout_marginTop="20dp"
                android:background="@drawable/username_edit_custom"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <TextView
                android:layout_marginTop="20dp"
                android:text="Number phone"
                android:fontFamily="@font/corbelbold"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/phone"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:inputType="phone"
                android:layout_marginTop="20dp"
                android:background="@drawable/username_edit_custom"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <TextView
                android:layout_marginTop="20dp"
                android:text="Address"
                android:fontFamily="@font/corbelbold"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/address"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:layout_marginTop="20dp"
                android:background="@drawable/username_edit_custom"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <TextView
                android:layout_marginTop="20dp"
                android:text="Day of birth"
                android:fontFamily="@font/corbelbold"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/dob"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:inputType="date"
                android:layout_marginTop="20dp"
                android:background="@drawable/username_edit_custom"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <RadioGroup
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:id="@+id/radioButton_male" />
                <RadioButton
                    android:textColor="#fff"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:id="@+id/radioButton_female" />
            </RadioGroup>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/linear_bot2"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="By signing up I accept the Term and Conditions"
            android:fontFamily="@font/corbelbold"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_gravity="center"
            android:text="of Travaloo"
            android:fontFamily="@font/corbelbold"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/register_text_view"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:text="Let me in"
            android:fontFamily="@font/corbelbold"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>