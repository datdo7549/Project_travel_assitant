<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    <ImageView
        android:id="@+id/bttBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/left_arrow"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/emailtext"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="@string/email"
            android:gravity="center_vertical"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/email"
            android:hint="Email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:layout_toRightOf="@+id/emailtext"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/passwordtext"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="@string/password"
            android:gravity="center_vertical"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/password"
            android:hint="@string/password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:layout_toRightOf="@+id/passwordtext"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/fullnametext"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="@string/fullname"
            android:gravity="center_vertical"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/fullName"
            android:hint="@string/fullname"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/fullnametext"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:inputType="textPersonName"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/phonetext"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="@string/phone"
            android:gravity="center_vertical"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/phone"
            android:hint="@string/phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/phonetext"
            android:inputType="phone"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/addresstext"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="@string/address"
            android:gravity="center_vertical"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/address"
            android:hint="@string/address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/addresstext"
            android:inputType="text"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/dateofbirthtext"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="@string/dateofbirth"
                android:gravity="center_vertical"
                android:textSize="20sp"
                />
            <EditText
                android:id="@+id/dob"
                android:hint="DD/MM/YYYY"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/dateofbirthtext"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:inputType="date"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/gendertext"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="@string/gender"
                android:gravity="center_vertical"
                android:textSize="20sp"
                />
            <RadioGroup
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/gendertext"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:id="@+id/radioButton_male"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:id="@+id/radioButton_female"
                    android:layout_marginLeft="10dp"
                    />

            </RadioGroup>
        </RelativeLayout>
    <Button
        android:visibility="gone"
        android:id="@+id/back"
        android:text="Back to Login Screen"
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>
    <Button
        android:id="@+id/register_button"
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>
    </LinearLayout>
</RelativeLayout>