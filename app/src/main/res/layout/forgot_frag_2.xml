<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange">
    <ImageView
        android:id="@+id/back_homepage4"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/back_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/back_homepage4"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:text="Verify Account"
            android:textColor="#ffffff"
            android:textSize="23sp"
            android:fontFamily="@font/corbelbold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Please send verification code we"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:fontFamily="@font/corbelbold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:text="sent to your email address"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:fontFamily="@font/corbelbold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:layout_below="@+id/back_homepage4"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/mailbox"
        />

    <LinearLayout
        android:layout_above="@+id/send_request"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_marginBottom="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/num1"
                    android:inputType="number"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/username_edit_custom"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/num2"
                    android:inputType="number"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/username_edit_custom"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/num3"
                    android:inputType="number"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/username_edit_custom"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/num4"
                    android:inputType="number"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/username_edit_custom"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/num5"
                    android:inputType="number"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/username_edit_custom"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/num6"
                    android:inputType="number"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/username_edit_custom"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>
            </RelativeLayout>
        </LinearLayout>
        <EditText
            android:id="@+id/new_password"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:hint="New password"
            android:background="@drawable/username_edit_custom"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
    </LinearLayout>
    <TextView
        android:layout_marginBottom="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/send_request"
        android:text="Reset my password"
        android:fontFamily="@font/corbelbold"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>