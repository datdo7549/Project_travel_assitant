<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradiant_background3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15sp"
    android:paddingRight="15sp"
    android:fitsSystemWindows="true"
    tools:context=".LoginActivity">


    <TextView
        android:textStyle="bold"
        android:layout_marginTop="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/habara"
        android:text="Welcome"
        android:textSize="53sp"
        android:textColor="#ffff"
        android:id="@+id/welcome_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_marginTop="140dp"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"
        android:id="@+id/rela1"
        android:layout_below="@+id/welcome_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:textColorHint="#fff"
            android:textColor="#ffff"
            android:textSize="17sp"
            android:textAlignment="center"
            android:layout_marginLeft="40dp"
            android:hint="Email or phone"
            android:background="@drawable/login_background"
            android:id="@+id/edit_emailPhone"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>

        <EditText
            android:layout_marginLeft="40dp"
            android:layout_centerInParent="true"
            android:inputType="textPassword"
            android:textColorHint="#fff"
            android:textColor="#ffff"
            android:textSize="18sp"
            android:textAlignment="center"
            android:hint="Password"
            android:layout_marginTop="25dp"
            android:background="@drawable/login_background"
            android:id="@+id/edit_password"
            android:layout_below="@+id/edit_emailPhone"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>
        <Button
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_login_background"
            android:layout_below="@+id/edit_password"
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="45dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:paddingTop="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_below="@id/rela1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18sp"
                android:textColor="#ffff"
                android:id="@+id/forgot_password"
                android:text="Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/line"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/line"
                android:layout_width="2dp"
                android:layout_height="20dp"/>
            <TextView
                android:textSize="18sp"
                android:textColor="#ffff"
                android:text="Register"
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:layout_centerInParent="true"
            android:textSize="18dp"
            android:text="or"
            android:id="@+id/or"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.facebook.login.widget.LoginButton
            android:layout_below="@+id/or"
            android:layout_marginTop="10dp"
            android:id="@+id/loginfb_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginRight="40dp"
                android:background="@drawable/facebook_background"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/fb"
                android:onClick="onClickFacebookButton"
                />
            <Button
                android:id="@+id/gg"
                android:background="@drawable/google_background"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </LinearLayout>

    </RelativeLayout>




</RelativeLayout>